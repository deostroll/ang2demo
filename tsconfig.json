{
  "version": "1.6.2",
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "noImplicitAny": true
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "src/app/app.ts",
    "src/app/bootstrap.ts",
    "src/app/components/form.ts",
    "src/app/components/item.ts",
    "src/app/components/list-service.ts",
    "src/app/components/list.ts",
    "src/app/main.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
